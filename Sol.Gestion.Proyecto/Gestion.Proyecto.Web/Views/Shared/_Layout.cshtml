<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")


    <link rel='stylesheet' type='text/css' href='@Url.Content("~/Content/css/toastr.css")' />
    <link rel='stylesheet' type='text/css' href='@Url.Content("~/Content/tooltipster.css")' />
    <link rel='stylesheet' type='text/css' href='@Url.Content("~/Content/tooltipster-noir.css")' />
    <link rel='stylesheet' type='text/css' href='@Url.Content("~/Content/css/simple-sidebar.css")' />

    <script type='text/javascript' src='@Url.Content("~/Content/js/plugins/others/jquery.fullcalendar.js")'></script>
    <script type='text/javascript' src='@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")'></script>
    <script type='text/javascript' src='@Url.Content("~/Scripts/jquery.validate.min.js")'></script>
    <script type='text/javascript' src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")'></script>
    <script type="text/javascript" src='@Url.Content("~/Scripts/Util.JSHelper.js")'></script>
    <script type='text/javascript' src='@Url.Content("~/Content/js/UserControl.Helper.js")'></script>
    <script type='text/javascript' src='@Url.Content("~/Content/js/files/bootstrap.js")'></script>
    <script type='text/javascript' src='@Url.Content("~/Content/js/toastr/toastr.js")'></script>
    <script type="text/javascript" src='@Url.Content("~/Scripts/jquery.tooltipster.min.js")'></script>
    <script type="text/javascript" src='@Url.Content("~/Scripts/bootbox.min.js")'></script>
    <script type="text/javascript" src='@Url.Content("~/Scripts/bootstrap-multiselect.js")'></script>
</head>
<body data-spy="scroll" data-target=".bs-docs-sidebar">

    <header class="top">
        <div style="float: left;">
            <ul class="breadcrumb">
                <li><span style="text-transform: uppercase; font-size: 12px"><a href="/Home/Index"><i class="icon-th icon-white"></i> Gestión Proyectos</a></span> <span class="divider">|</span></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
        @{ var User = Gestion.Proyecto.Security.ProfileUserUtil.GetUserSession(); }
        <div style="float: right;">
            <span><strong>@Gestion.Proyecto.Resource.Title.Bienvenido </strong>@User.Empleado.Nombres @User.Empleado.Apellidos (@User.Empleado.Cargo.Descripcion) </span>|
            <a title="" class="cerrar" href="@Url.Action("SignOut", "Account")"><i class="icon-off icon-white"></i></a>
        </div>
        <div class="clearfix"></div>

    </header>
    <div class="clear"></div>

    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                @*<li class="sidebar-brand">
                    <a href="#">
                        Start Bootstrap
                    </a>
                </li>*@
                <li>
                    <a href="/Proyecto/Consultar">Proyecto</a>
                </li>
                <li>
                    <a href="/Bandeja/Consulta">Bandeja Proyecto</a>
                </li>
            </ul>
        </div>

        <div class="container-fluid">
            <fieldset id="me-content-fielset">
                @RenderBody()
            </fieldset>
            <script>
                $("#me-content-fielset").css("padding", "10px");
            </script>
        </div>

    </div>
</body>
</html>
