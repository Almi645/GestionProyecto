@model Gestion.Proyecto.Web.Models.ProyectoDetalle.ProyectoDetalleViewModel
@{
    ViewBag.Title = "PROYECTO DETALLE";
}

<style>
    #overflow {
        border-bottom: 1px solid #E1E1E8;
        border-radius: 4px;
        height: 400px;
        overflow-y: scroll;
        overflow-x: hidden;
    }
</style>
@Html.Hidden("UrlConsultarBandeja", Url.Action("Consulta", "Bandeja"))
@Html.Hidden("UrlRenderProyectoDetalle", Url.Action("Render", "ProyectoDetalle"))
<div class="bs-docs-example">
    <p style="text-transform:uppercase"><i class="icon-th icon-black"></i> Proyecto: @Model.Proyectos.Codigo - @Model.Proyectos.Descripcion</p>
</div>
<div class="prettyprint">
    <div class="row-fluid">

        <div class="span3">
            <div class="list-group">
                <a href="#" class="list-group-item active">
                    Seleccion un detalle ↓
                </a>
                <div id="overflow">
                    @foreach (var option in Model.MenuDetalleList)
                    {
                        <a href="#" class="list-group-item" codeform="@option.Codigo" onclick="Render(this)">@option.Descripcion</a>
                    }
                </div>
            </div>
        </div>

        <div class="span9">
            <div id="IdFormDetalle">

                <div class="list-group">
                    <a class="list-group-item active"> &nbsp; </a>
                    <div class="list-group-item">
                        <div class="row-fluid"></div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row-fluid">
            <button id="btnCancelar" type="button" class="btn btn-info" style="float:right; margin-left:1px; margin-right:1px"> Cancelar </button>
        </div>
    </div>
</div>
<script type='text/javascript' src='@Url.Content("~/ViewScript/ProyectoDetalle/Render.js")'></script>
