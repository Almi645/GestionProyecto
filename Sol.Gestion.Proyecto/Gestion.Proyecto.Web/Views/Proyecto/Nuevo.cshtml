@model Gestion.Proyecto.Web.Models.Proyecto.ProyectoViewModel
@{
    ViewBag.Title = @Gestion.Proyecto.Resource.Title.RegistrarProyecto;
}
@Html.Hidden("UrlConsultarProyecto", Url.Action("Consultar", "Proyecto"))


<link rel='stylesheet' type='text/css' href='@Url.Content("~/Content/3dev/base/bootstrap-multiselect.css")' />

@using (Html.BeginForm("Registrar", "Proyecto", FormMethod.Post, new { @id = "FrmProyecto" }))
{
    <div class="bs-docs-example">
        <p style="text-transform:uppercase">:: @Gestion.Proyecto.Resource.Title.RegistrarProyecto</p>
    </div>
    <div class="prettyprint">
        <div class="row-fluid">
            <div class="span4">
                @Html.LabelFor(model => model.Proyectos.Codigo, new { @Class = "span3" })
                <div class="span9">
                    @Html.TextBoxFor(model => model.Proyectos.Codigo, new { @id = "Codigo",})
                    @Html.ValidationMessageFor(model => model.Proyectos.Codigo, string.Empty, new { @Class = "error" })
                </div>
            </div>
            <div class="span4">
                @Html.LabelFor(model => model.Proyectos.Descripcion, new { @Class = "span3" })
                <div class="span9">
                    @Html.TextBoxFor(model => model.Proyectos.Descripcion, new { @id = "Descripcion",})
                    @Html.ValidationMessageFor(model => model.Proyectos.Descripcion, string.Empty, new { @Class = "error" })
                </div>
            </div>
            <div class="span4">
                @Html.LabelFor(model => model.Proyectos.Estado, new { @Class = "span3" })
                <div class="span9">
                    @Html.CheckBoxFor(m => m.Proyectos.Estado, new { id = "Estado"})
                    @Html.ValidationMessageFor(model => model.Proyectos.Estado, string.Empty, new { @Class = "error" })
                </div>            
            </div>
        </div>
        <div class="row-fluid">
            <div class="span4">
                @Html.LabelFor(model => model.Proyectos.NombreEstacion, new { @Class = "span3" })
                <div class="span9">
                    @Html.TextBoxFor(model => model.Proyectos.NombreEstacion, new { @id = "NombreEstacion" })
                    @Html.ValidationMessageFor(model => model.Proyectos.NombreEstacion, string.Empty, new { @Class = "error" })
                </div>
            </div>
            <div class="span4">
                @Html.LabelFor(model => model.Proyectos.NombreEquipo, new { @Class = "span3" })
                <div class="span9">
                    @Html.TextBoxFor(model => model.Proyectos.NombreEquipo, new { @id = "NombreEquipo" })
                    @Html.ValidationMessageFor(model => model.Proyectos.NombreEquipo, string.Empty, new { @Class = "error" })
                </div>
            </div>
            <div class="span4">
                @Html.LabelFor(model => model.Proyectos.TipoEquipo, new { @Class = "span3" })
                <div class="span9">
                    @Html.TextBoxFor(model => model.Proyectos.TipoEquipo, new { @id = "TipoEquipo" })
                    @Html.ValidationMessageFor(model => model.Proyectos.TipoEquipo, string.Empty, new { @Class = "error" })
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span4">
                @Html.LabelFor(model => model.Proyectos.ID, new { @Class = "span3" })
                <div class="span9">
                    @Html.TextBoxFor(model => model.Proyectos.ID, new { @id = "ID" })
                    @Html.ValidationMessageFor(model => model.Proyectos.ID, string.Empty, new { @Class = "error" })
                </div>
            </div>
            <div class="span4">
                @Html.LabelFor(model => model.Proyectos.IP, new { @Class = "span3" })
                <div class="span9">
                    @Html.TextBoxFor(model => model.Proyectos.IP, new { @id = "IP" })
                    @Html.ValidationMessageFor(model => model.Proyectos.IP, string.Empty, new { @Class = "error" })
                </div>
            </div>
            <div class="spa4">
                <select id="example-post" name="multiselect[]" multiple="multiple">
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                    <option value="4">Option 4</option>
                    <option value="5">Option 5</option>
                    <option value="6">Option 6</option>
                </select>
            </div>
        </div>
        <div class="row-fluid">
            <button id="btnProyectoCancelar" type="button" class="btn btn-info" style="float:right; margin-left:1px; margin-right:1px"> Cancelar </button>
            <button id="btnProyectoRegistrar" type="button" class="btn btn-info" style="float:right; margin-left:1px; margin-right:1px"> Registrar </button>
        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#example-post').multiselect({
            includeSelectAllOption: true,
            enableFiltering: true
        });
    });
</script>
<script type='text/javascript' src='@Url.Content("~/ViewScript/Proyecto/Nuevo.js")'></script>
<script type="text/javascript" src='@Url.Content("~/Scripts/bootstrap-multiselect.js")'></script>